<?xml version='1.0' encoding='utf-8'?>
<odoo>    
    <!-- primary|extension Inherited .:Tree:. view for "model" -->
    <record id="minimarket_kasir_tree_inherited" model="ir.ui.view">
        <field name="name">minimarket_kasir_tree_inherited</field>
        <field name="model">minimarket.kasir</field>
        <field name="inherit_id" ref="minimarket_manusia_view_tree" />
        <!-- <field name="mode">primary</field> -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alamat']" position="after">
                <field name="id_pegawai"/>
                <field name="status_pegawai"/>
            </xpath>
        </field>
    </record>
    
    <record id="minimarket_kasir_form_inherited" model="ir.ui.view">
        <field name="name">minimarket_kasir_form_inherited</field>
        <field name="model">minimarket.kasir</field>
        <field name="inherit_id" ref="minimarket_manusia_view_form" />
        <!-- <field name="mode">primary</field> -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="id_pegawai"/>
                <field name="status_pegawai"/>
            </xpath>
        </field>
    </record>
    
    <!-- primary|extension Inherited .:Search:. view for "model" -->
    <record id="view_model_search_inherited" model="ir.ui.view">
        <field name="name">view.model.search inherited</field>
        <field name="model">model</field>
        <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->
        <field name="inherit_id" ref="module_name.view_model_search" />
        <field name="type">search</field>
        <field name="mode">primary|extension</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <!-- 
            <xpath expr="//field[@name='name']" position="after">
                
            </xpath>
            -->
        </field>
    </record>
    


    <record id="kasir_action" model="ir.actions.act_window">
        <field name="name">Kasir</field>
        <field name="res_model">minimarket.kasir</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="kasir_menu"
        name="Kasir"
        action="kasir_action"
        parent="karyawan_root"
        sequence="10" />
</odoo>