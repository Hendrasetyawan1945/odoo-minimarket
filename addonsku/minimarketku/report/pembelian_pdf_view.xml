<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_pembelian_pdf">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
<!--                <t t-call="web.external_layout">-->
                <div class="page">
                    <h1 >Detail Penjualan</h1>
                    <t t-foreach="docs" t-as="doc">
                        <div class="row">
                            <div class="col-4">Kode Pemasok :</div>
                            <div class="col-6"><span t-field="doc.kode_pemasok"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Nama Member   :</div>
                            <div class="col-6"><span t-field="doc.tgl_masuk"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Tanggal Pembelian :</div>
                            <div class="col-5"><span t-field="doc.kode_provinsi"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Subtotal :</div>
                            <div class="col-5"><span t-field="doc.kode_keteranganasal"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Status Pembelian :</div>
                            <div class="col-5"><span t-field="doc.total"/></div>
                        </div>
                        <div class="row">
                            <div class="col-4">Status Pembelian :</div>
                            <div class="col-5"><span t-field="doc.status"/></div>
                        </div>
                            <div class="row">
                            <div class="col-4"></div>
                        </div>

                        <div class="alert alert-dark" role="alert">
                        <h5 class="italic">Daftar Pembelian detail</h5>
                        </div>

                        <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                            <th scope="col">Kode barang</th>
                            <th scope="col">Nama barang</th>
                            <th scope="col">Harga Jual</th>
                            <th scope="col">Qty</th>
                            <th scope="col">total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.no_masuk_ids" t-as="i">
                                <td><span t-field="i.kode_barang_ids"/></td>
                                <td><span t-field="i.nama_barangpembelian"/></td>
                                <td><span t-field="i.harga_beli"/></td>
                                <td><span t-field="i.jumlah"/></td>
                                <td><span t-field="i.subtotal"/></td>
                            </tr>
                        </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>


</odoo>